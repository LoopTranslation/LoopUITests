{
  "name": "LoopUITests",
  "version": "1.0.0",
  "devDependencies": {
    "detox": "^14.8.5",
    "jest": "^24.9.0"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "build/Debug-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.sh Debug uitest-travis-build debug_build_log.txt",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      },
      "ios.sim.release":{
        "binaryPath": "build/Release-iphonesimulator/Loop.app",
        "build": "source ./scripts/build_loop.sh Release uitest-travis-build release_build_log.txt",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      }
    },
    "test-runner": "jest"
  }
}
