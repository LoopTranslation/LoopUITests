const { setup,  match, pump, cgm } = require('../../src/index');

describe('scenario test', () => {
    beforeAll(async () => {
        await setup.launchLoop();
        await setup.loadScenarios(device.id);
        await pump.add();
        await cgm.add();
    });
    describe('setup', () => {
        it('should show scenarios when shaken', async()=>{
            await device.shake();
        });
        it('shows default Sine Curve scenario', async()=>{
            await expect(match.accessible.Label('Sine Curve')).toExist();
        });
        it('canel out of scenarios', async()=>{
            await match.accessible.ButtonBarButton('Cancel').tap();
        });
    });
    describe('Sine Curve', () => {
        it('should show Sine Curve scenario when shaken', async()=>{
            await device.shake();
            await expect(match.accessible.Label('Sine Curve')).toExist();
        });
        it('select scenario', async()=>{
            await match.accessible.Label('Sine Curve').tap();
        });
        it('Load scenario', async()=>{
            await match.accessible.ButtonBarButton('Load').tap();
        });
    });
});

